<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="pe.edu.upeu.sisrestaurant.controller.AdminSetupController" 
            prefWidth="800" prefHeight="600" style="-fx-background-color: #f5f5f5;">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" 
              AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
            <children>
                <Label text="Panel de Administración" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                    <VBox.margin>
                        <Insets bottom="20" />
                    </VBox.margin>
                </Label>
                
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="btnRefresh" text="Actualizar" onAction="#actualizarContadores" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    <Button fx:id="btnImportarExcel" text="Importar Excel" onAction="#importarExcel" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                </HBox>
                
                <Label text="Configuración Inicial del Sistema" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;">
                    <VBox.margin>
                        <Insets bottom="30" />
                    </VBox.margin>
                </Label>
                
                <GridPane hgap="15" vgap="15" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" minHeight="80" prefHeight="80" />
                        <RowConstraints vgrow="SOMETIMES" minHeight="80" prefHeight="80" />
                        <RowConstraints vgrow="SOMETIMES" minHeight="80" prefHeight="80" />
                    </rowConstraints>
                    
                    <Button text="Categorías" onAction="#abrirCategorias" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Label fx:id="lblCategoriasCount" alignment="CENTER" contentDisplay="CENTER" text="0" style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0" />
                        </GridPane.margin>
                    </Label>
                    
                    <Button text="Tipo de Documentos" onAction="#abrirTipoDocumentos" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Label fx:id="lblTipoDocCount" alignment="CENTER" contentDisplay="CENTER" text="0" style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0" />
                        </GridPane.margin>
                    </Label>
                    
                    <Button text="Roles" onAction="#abrirRol" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Label fx:id="lblRolesCount" alignment="CENTER" contentDisplay="CENTER" text="0" style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0" />
                        </GridPane.margin>
                    </Label>
                    
                    <Button text="Mesas" onAction="#abrirMesas" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Label fx:id="lblMesasCount" alignment="CENTER" contentDisplay="CENTER" text="0" style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0" />
                        </GridPane.margin>
                    </Label>
                    
                    <Button text="Secciones" onAction="#abrirSeccion" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Label fx:id="lblSeccionesCount" alignment="CENTER" contentDisplay="CENTER" text="0" style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0" />
                        </GridPane.margin>
                    </Label>
                    
                    <Button text="Tipo Doc. Venta" onAction="#abrirTipoDocVenta" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Label fx:id="lblTipoDocVentaCount" alignment="CENTER" contentDisplay="CENTER" text="0" style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0" />
                        </GridPane.margin>
                    </Label>
                    
                    <Button text="Usuarios" onAction="#abrirUsuario" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Label fx:id="lblUsuariosCount" alignment="CENTER" contentDisplay="CENTER" text="0" style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0" />
                        </GridPane.margin>
                    </Label>
                    
                    <Button text="Ir al Sistema" onAction="#irAlSistema" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px;" 
                            prefWidth="180" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                </GridPane>
                
                <Label text="Complete la configuración inicial antes de usar el sistema" 
                       style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;" alignment="CENTER">
                    <VBox.margin>
                        <Insets top="20" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane> 